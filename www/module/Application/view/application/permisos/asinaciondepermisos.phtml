                    $("#permiso_triaje").prop('checked', false).change();
                    $("#permiso_gestion_medicos").prop('checked', false).change();


                } else if (data.estado === 'mod') {
                    $("#resp_objeto").html("Modificar permiso");
                    $("#tipo_asignacion").val("modificando");
